<div class="rate">
  <% if (!recommendation) { %>
    <p>Recommendation not found.</p>
  <% } else { %>
    <h2>Rate <%= recommendation.albumInfo.artist %>: <%= recommendation.albumInfo.name %></h2>
    <form action="/rating/create" method="POST">
      <input type="hidden" name="recommendation" value="<%- recommendation.id %>">
      <input type="hidden" name="ratingValue" value="0">
      <div class="rating">
        <i id="1" class="fa fa-star-o"></i><i id="2" class="fa fa-star-o"></i><i id="3" class="fa fa-star-o"></i><i id="4" class="fa fa-star-o"></i><i id="5" class="fa fa-star-o"></i>
      </div>
      <button type="submit" class="btn btn-default">Rate</button>
      <input type="hidden" name="_csrf" value="<%= _csrf %>">
    </form>
  <% } %>
</div>